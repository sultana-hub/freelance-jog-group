<title><%= title %></title>
<%- include("./partials/header.ejs") %>

<div class="content-wrapper">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-8 grid-margin stretch-card">
        <div class="card profile-card shadow-lg rounded-3">
          <div class="card-body text-center">
            
            <!-- Profile Pic -->
            <div class="profile-pic-wrapper">
              <img src="/<%= loginUser.profilePic %>" alt="profile" class="profile-pic"/>
            </div>

            <!-- Name & Role -->
            <h3 class="profile-name"><%= loginUser.name %></h3>
            <p class="profile-role"><%= loginUser.role %></p>

            <!-- Details -->
            <div class="profile-details mt-4">
              <div class="detail-item">
                <label>Email:</label>
                <span><%= loginUser.email %></span>
              </div>
            </div>

            <!-- Action Button -->
            <!-- <button class="btn btn-edit mt-4">Edit Profile</button> -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("./partials/footer.ejs") %>
