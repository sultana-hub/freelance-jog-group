<title><%= title %></title>

 

<style>
  .chart-container {
  position: relative;
  height: 300px;   /* fixed height */
  width: 100%;     /* parent ke according fit */
  overflow: hidden; /* extra cut off */
}

</style>

<%- include("./partials/header.ejs") %>

<div class="main-panel">
  <div class="content-wrapper">

    <!-- Welcome Row -->
    <div class="row ">
      <div class="col-md-12 grid-margin p-4 rounded shadow">
        <div class="row ">
          <div class="col-12 col-xl-8 mb-4 mb-xl-0 ">
            <h3 class="font-weight-bold">Welcome <%= loginUser.name %></h3>
            <h6 class="font-weight-normal mb-0">All systems are running smoothly!</h6>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats Row -->
    <div class="row">
      <div class="col-md-6 grid-margin transparent">
        <div class="row">
          <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-tale shadow">
              <div class="card-body">
                <p class="mb-4">Total Users</p>
                <h1><%= users.totalUser %></h1>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-dark-blue shadow">
              <div class="card-body">
                <p class="mb-4">Total Admin</p>
                <h1><%= users.totalAdmin %></h1>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-light-blue">
              <div class="card-body">
                <p class="mb-4">Total Freelancers</p>
                <h1><%= users.totalFreelancers %></h1>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-4 stretch-card transparent ">
            <div class="card card-light-danger shadow">
              <div class="card-body">
                <p class="mb-4">Total Clients</p>
                <h1><%= users.totalClients %></h1>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Jobs -->
      <div class="col-md-6 grid-margin transparent">
        <div class="row">
          <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-tale shadow">
              <div class="card-body">
                <p class="mb-4">Total Jobs</p>
                <h1><%= jobs.totalJobs %></h1>
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-dark-blue shadow">
              <div class="card-body">
                <p class="mb-4">Total Open Jobs</p>
                <h1><%= jobs.totalOpenJobs %></h1>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-light-blue shadow">
              <div class="card-body">
                <p class="mb-4">Total Closed Jobs</p>
                <h1><%= jobs.totalClosedJobs %></h1>
              </div>
            </div>
          </div>

          <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-light-danger shadow">
              <div class="card-body">
                <p class="mb-4">In Progress Jobs</p>
                <h1><%= jobs.totalInProgressJobs %></h1>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Charts Row -->
    <div class="row">
      <div class="col-md-6 grid-margin stretch-card">
        <div class="card shadow">
          <div class="card-body">
            <p class="card-title">User Growth</p>
            <div class="chart-container">
            <canvas id="userPolarChart"></canvas>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6 grid-margin stretch-card">
        <div class="card shadow">
          <div class="card-body">
            <p class="card-title">Job Status</p>
            <div class="chart-container">
            <canvas id="jobStatusChart"></canvas>
            </div>
            
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 grid-margin stretch-card">
        <div class="card shadow">
          <div class="card-body">
            <p class="card-title">Category Distribution</p>
            <div class="chart-container">
            <canvas id="categoryChart"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include("./partials/footer.ejs") %>

