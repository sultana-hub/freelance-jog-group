<%- include("../partials/header") %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Manage Category</h3>
    <a href="/admin/category-create" class="btn btn-success">+ Add New</a>
  </div>

  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>SL. No</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (categories && categories.length > 0) { %>
        <% categories.forEach((category, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= category.name %></td>
            <td>
              <a href="/admin/category-update/<%= category._id %>" class="btn btn-warning btn-sm">Edit</a>
              <form action="/admin/category-delete/<%= category._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="3" class="text-center">No categories available</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <div class="text-start mt-3">
    <button class="btn btn-primary">Apply</button>
  </div>
</div>

<%- include("../partials/footer") %>
