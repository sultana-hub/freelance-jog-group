<%- include("../partials/header") %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Manage Bids</h3>
    
  </div>

  <div class="card shadow-lg rounded-3">
    <div class="card-body">
      <h4 class="card-title">Bids Table</h4>

      <!-- Search -->
      <div class="d-flex align-items-center justify-content-end mb-3 " style="max-width:300px;">
        <input type="text" id="bidSearch" class="form-control searchBox" placeholder="Search by Job Title or Freelancer">
        <div class="d-flex align-items-center justify-content-center searchIcon ms-2">
          <i class="fa fa-search"></i>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-striped" id="bidTable">
          <thead class="table-header-custom" style="background:#4B49AC; color:white;">
            <tr>
              <th>SL. No</th>
              <th>Job Title</th>
              <th>Freelancer</th>
              <th>Bid Amount</th>
              <th>Cover Letter</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (bids && bids.length > 0) { %>
              <% bids.forEach((bid, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= bid.jobId ? bid.jobId.title : "N/A" %></td>
                  <td><%= bid.freelancerId ? bid.freelancerId.name : "N/A" %></td>
                  <td><%= bid.bidAmount %></td>
                  <td><%= bid.coverLetter.slice(0, 30) %></td>
                  <td>
                    <% if (bid.status === "pending") { %>
                      <span class="badge bg-warning text-dark">Pending</span>
                    <% } else if (bid.status === "accepted") { %>
                      <span class="badge bg-success text-white">Accepted</span>
                    <% } else if (bid.status === "rejected") { %>
                      <span class="badge bg-danger text-white">Rejected</span>
                    <% } else { %>
                      <span class="badge bg-secondary"><%= bid.status %></span>
                    <% } %>
                  </td>
                  <td>
                    <div class="d-flex">
                       <div class="d-flex">
                         <div class="me-3 mr-3">
                           <button 
                             class="btn btn-warning btn-sm editBidBtn" 
                             data-id="<%= bid._id %>" 
                             data-status="<%= bid.status %>">
                             Edit
                           </button>
                         </div>
                        </div>
                      <!-- <div>
                        <form action="/admin/bid-delete/<%= bid._id %>" method="POST">
                          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                      </div> -->
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="7" class="text-center">No bids available</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="d-flex justify-content-between align-items-center mt-3">
        <span id="bidPageInfo"></span>
        <div>
          <button id="bidPrevPage" class="btn btn-secondary btn-sm">Prev</button>
          <button id="bidNextPage" class="btn btn-secondary btn-sm">Next</button>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- Status Edit Modal -->
<div class="modal fade" id="editBidModal" tabindex="-1" aria-labelledby="editBidModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="editBidForm" method="POST" action="">
        <div class="modal-header">
          <h5 class="modal-title" id="editBidModalLabel">Update Bid Status</h5>
          <button type="button" class="btn btn-outline-danger rounded btn-sm" data-bs-dismiss="modal" aria-label="Close">&times;</button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="bidId" name="bidId">

          <div class="mb-3">
            <label for="status" class="form-label">Status</label>
            <div class="input-group">
              <select class="form-select custom-select" id="status" name="status" required>
                <option value="pending">Pending</option>
                <option value="accepted">Accepted</option>
                <option value="rejected">Rejected</option>
              </select>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>

<script src="/customjs/bidPagination.js"></script>
<script src="/customjs/bisModel.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
