<%- include("../partials/header") %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Manage Jobs</h3>
  </div>

  <div class="card shadow-lg rounded-3">
    <div class="card-body">
      <h4 class="card-title">Jobs Table</h4>

      <!-- Search -->
      <div class="d-flex align-items-center justify-content-end mb-3" style="max-width:300px;">
        <input type="text" id="jobSearch" class="form-control searchBox" placeholder="Search by title or client name">
        <div class="d-flex align-items-center justify-content-center searchIcon ms-2">
          <i class="fa fa-search"></i>
        </div>
      </div>

      <div class="table-responsive">
        <table class="table table-striped" id="jobsTable">
          <thead class="table-header-custom" style="background:#4B49AC; color:white;">
            <tr>
              <th>SL. No</th>
              <th>Client Name</th>
              <th>Title</th>
              <th>Category</th>
              <th>Budget</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (jobs && jobs.length > 0) { %>
              <% jobs.forEach((job, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td class="job-client"><%= job.clientId?.name %></td>
                  <td class="job-title"><%= job.title %></td>
                  <td><%= job.categoryId?.name %></td>
                  <td>â‚¹ <%= job.budget %></td>
                  <td>
                    <% if (job.status === "open") { %>
                      <span class="badge bg-success">Open</span>
                    <% } else if (job.status === "closed") { %>
                      <span class="badge bg-danger">Closed</span>
                    <% } else if (job.status === "in_progress") { %>
                      <span class="badge bg-warning text-dark">In Progress</span>
                    <% } else { %>
                      <span class="badge bg-secondary"><%= job.status %></span>
                    <% } %>
                  </td>
                  <td>
                    <form action="/admin/job-delete/<%= job._id %>" method="POST">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="7" class="text-center">No jobs found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="d-flex justify-content-between align-items-center mt-3">
        <span id="jobPageInfo"></span>
        <div>
          <button id="jobPrevPage" class="btn btn-secondary btn-sm">Prev</button>
          <button id="jobNextPage" class="btn btn-secondary btn-sm">Next</button>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>

<script src="/customjs/jabPagination.js"></script>